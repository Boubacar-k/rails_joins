<h1>Shops</h1>
<style>
      table, th, td {
         border: 1px solid black;
         border-collapse: collapse;
      }
      th, td {
         padding-top: 10px;
         padding-bottom: 20px;
         padding-left: 30px;
         padding-right: 40px;
      }
</style>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th colspan="3">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.id %></td>
        <td><%= shop.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>